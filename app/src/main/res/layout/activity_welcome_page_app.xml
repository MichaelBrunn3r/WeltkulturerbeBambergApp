<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomePageActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/altes_rathaus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_welcome_title"
        android:id="@+id/textview_welcome_header"
        style="@style/WeltkulturerbeBambergAppTheme.TextView.BigHeader"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_welcome_continue"
        android:id="@+id/button_welcome_continue"
        android:onClick="onBtnClickedContinue"
        style="@style/WeltkulturerbeBambergAppTheme.Button.Overlay"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_welcome_restart_tour"
        android:id="@+id/button_welcome_restart"
        android:onClick="onBtnClickedRestartTour"
        style="@style/WeltkulturerbeBambergAppTheme.Button.Overlay"
        android:visibility="visible"
        android:layout_below="@+id/button_welcome_continue"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/WeltkulturerbeBambergAppTheme.Button.Overlay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_welcome_start"
        android:id="@+id/button_welcome_start"
        android:onClick="onBtnClickedStart"
        android:visibility="invisible"
        android:layout_below="@+id/button_welcome_continue"
        android:layout_alignParentStart="true" />

</RelativeLayout>
