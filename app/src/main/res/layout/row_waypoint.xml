<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/row_waypoint_icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_waypoint_not_visited"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/row_waypoint_icon"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/row_waypoint_icon"
        android:layout_alignBottom="@+id/row_waypoint_icon"
        android:padding="6dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/row_waypoint_name"
            android:text="Waypoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="1"/>

        <TextView
            android:id="@+id/row_waypoint_distance"
            android:text="0m"
            style="@style/WeltkulturerbeBambergAppTheme.TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>