<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_quiz_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.wksb.wkebapp.activity.QuizActivity"
    android:clickable="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:theme="@style/WeltkulturerbeBambergAppTheme.ActionBar"
        android:paddingTop="@dimen/actionbar_padding_top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearlayout_quiz_answers"
        android:layout_below="@+id/actionbar">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-------------------"
            android:id="@+id/textview_quiz_question"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:gravity="center"
            style="@style/WeltkulturerbeBambergAppTheme.TextView"/>
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/linearlayout_quiz_answers"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/linearlayout_quiz_answers_left">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="---"
                android:id="@+id/button_quiz_answer1"
                android:layout_weight="1"
                style="@style/WeltkulturerbeBambergAppTheme.ButtonQuiz"
                android:onClick="onBtnClickAnswer"
                android:gravity="center_vertical|center_horizontal" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="---"
                android:id="@+id/button_quiz_answer2"
                android:layout_weight="1"
                style="@style/WeltkulturerbeBambergAppTheme.ButtonQuiz"
                android:onClick="onBtnClickAnswer"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/linearlayout_quiz_answers_right">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="---"
                android:id="@+id/button_quiz_answer3"
                android:layout_weight="1"
                style="@style/WeltkulturerbeBambergAppTheme.ButtonQuiz"
                android:onClick="onBtnClickAnswer"
                android:gravity="center_vertical|center_horizontal" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="---"
                android:id="@+id/button_quiz_answer4"
                android:layout_weight="1"
                style="@style/WeltkulturerbeBambergAppTheme.ButtonQuiz"
                android:onClick="onBtnClickAnswer"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>