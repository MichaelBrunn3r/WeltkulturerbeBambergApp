<resources>
    <!-- Theme of the Application. -->
    <!-- >>>>>>>>>>>>>>>>>>>>>>>>> -->
    <!-- >>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="WeltkulturerbeBambergAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonStyle">@style/WeltkulturerbeBambergAppTheme.Button.TransparentBackground</item> <!-- Style of the Buttons -->
        <item name="android:textViewStyle">@style/WeltkulturerbeBambergAppTheme.TextView.TransparentBackground</item> <!-- Style of the TextViews -->

        <!-- Make the StatusBar Transparent -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <!-- ========================= -->
    <!-- ========================= -->



    <!--- Styles of the ActionBar -->
    <!-- >>>>>>>>>>>>>>>>>>>>>>>>> -->
    <!-- >>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="WeltkulturerbeBambergAppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/PrimaryColor</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:textColor">@color/TextAndIconsColor</item>

        <!-- Support AppCompat -->
        <item name="background">@color/PrimaryColor</item>
        <item name="displayOptions">showTitle</item>
        <item name="titleTextStyle">@style/WeltkulturerbeBambergAppTheme.ActionBar.TitleText</item>
    </style>

    <style name="WeltkulturerbeBambergAppTheme.ActionBar.Navigation" parent="WeltkulturerbeBambergAppTheme.ActionBar">
        <item name="android:background">@android:color/transparent</item>

        <!-- Support AppCompat -->
        <item name="background">@drawable/actionbar_navigation_background</item>
    </style>
    <!-- ========================= -->
    <!-- ========================= -->
    <style name="WeltkulturerbeBambergAppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/TextAndIconsColor</item>
    </style>



    <!--- Styles of different Views -->
    <!-- >>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <!-- >>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="WeltkulturerbeBambergAppTheme.View" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/PrimaryColor</item>
    </style>
    <!-- ========================== -->
    <!-- ========================== -->

    <!-- Styles of the TextViews -->
    <!-- >>>>>>>>>>>>>>>>>>>>>>> -->
    <!-- >>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="WeltkulturerbeBambergAppTheme.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/TextAndIconsColor</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:background">@color/PrimaryColor</item>
    </style>

    <style name="WeltkulturerbeBambergAppTheme.TextView.TransparentBackground" parent="WeltkulturerbeBambergAppTheme.TextView">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="WeltkulturerbeBambergAppTheme.TextView.OnBackground" parent="WeltkulturerbeBambergAppTheme.TextView.TransparentBackground">
        <item name="android:textColor">@color/BackgroundTextAndIconsColor</item>
    </style>

    <style name="WeltkulturerbeBambergAppTheme.TextView.Overlay" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/TextAndIconsColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">80sp</item>
    </style>
    <!-- ======================= -->
    <!-- ======================= -->



    <!-- Styles of the Buttons -->
    <!-- >>>>>>>>>>>>>>>>>>>>> -->
    <!-- >>>>>>>>>>>>>>>>>>>>> -->
    <style name="WeltkulturerbeBambergAppTheme.Button" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/PrimaryColor</item>
        <item name="android:textColor">@color/TextAndIconsColor</item>
    </style>

    <style name="WeltkulturerbeBambergAppTheme.Button.TransparentBackground" parent="WeltkulturerbeBambergAppTheme.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/TextAndIconsColor</item>
    </style>

    <style name="WeltkulturerbeBambergAppTheme.Button.OnBackground" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/BackgroundTextAndIconsColor</item>
    </style>

    <style name="WeltkulturerbeBambergAppTheme.Button.Overlay" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/OverlayColor</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>